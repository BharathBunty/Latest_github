<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharath.myanimationbulb.MainActivity">

    <ImageView
        android:id="@+id/bluebulb"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bulbblue" />

    <ImageView
        android:id="@+id/greenbulb"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluebulb"
        app:srcCompat="@drawable/bulbgreen" />

    <Button
        android:id="@+id/bluebutton"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:onClick="blueTapped"
        android:text="blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenbulb" />

    <Button
        android:id="@+id/greenbutton"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="greenTapped"
        android:text="green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/bluebutton"
        app:layout_constraintTop_toBottomOf="@+id/greenbulb" />
</android.support.constraint.ConstraintLayout>
